<UserControl x:Class="ProductionAccounting.Views.ProductsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductionAccounting.Views" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      xmlns:viewmodels="clr-namespace:ProductionAccounting.ViewModels"
      d:DesignHeight="750" d:DesignWidth="1000"
      d:DataContext="{d:DesignInstance {x:Type viewmodels:ProductsViewModel}}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetProducts}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Background="#272537">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="550"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="480"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <GroupBox Header="Изделия" Foreground="White">
                <DataGrid ItemsSource="{Binding Products}"
                          SelectedItem="{Binding SelectedItem}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название изделия"
                                            Width="*" 
                                            Binding="{Binding Name}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button 
                    Height="40" 
                    Content="Добавить изделие"
                    Style="{StaticResource CommonButtonStyle}"
                    Command="{Binding AddProducts}">
                </Button>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button
                    Height="40"
                    Content="Редактирование"
                    Style="{StaticResource CommonButtonStyle}"
                    Command="{Binding EditProducts}"/>
                    <Button Grid.Row="1"
                    Height="40"
                    Content="Удаление"
                    Style="{StaticResource CommonButtonStyle}"
                    Command="{Binding DeleteProducts}"/>
                </Grid>
            </Grid>
            <Button Grid.Column="2"
                    Command="{Binding Print}"/>
        </Grid>
        <fa:IconBlock Grid.Column="1" 
                      Icon="Spinner" 
                      Visibility="{Binding OnLoading}"/>
    </Grid>
</UserControl>
