<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:ProductionAccounting.ViewModels"
                    xmlns:view="clr-namespace:ProductionAccounting.Views">

    <DataTemplate DataType="{x:Type vm:EmployeeViewModel}">
        <view:EmployeeView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ProductsViewModel}">
        <view:ProductsView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CoefficientViewModel}">
        <view:CoefficientView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:OperationsViewModel}">
        <view:OperationsView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:InsertDataViewModel}">
        <view:InsertDataView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CalculateSalaryViewModel}">
        <view:CalculateSalaryView DataContext="{Binding}"/>
    </DataTemplate>
</ResourceDictionary>