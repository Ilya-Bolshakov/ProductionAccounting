<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:ProductionAccounting.ViewModels"
                    xmlns:view="clr-namespace:ProductionAccounting.Views">

    <DataTemplate DataType="{x:Type vm:EmployeeViewModel}">
        <view:EmployeeView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:OperationViewModel}">
        <view:OperationView DataContext="{Binding}"/>
    </DataTemplate>
</ResourceDictionary>